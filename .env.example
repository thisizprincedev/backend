# Environment
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/srm_panel
REDIS_URL=redis://localhost:6379

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Firebase
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com"}

# Encryption
APP_BUILDER_ENCRYPTION_KEY=your-encryption-key-32-bytes-minimum

# Telegram
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# Optional
SENTRY_DSN=
LOG_LEVEL=debug
